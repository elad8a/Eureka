{ 
    "version": 2,
    "configurePresets": [
        {
            "name": "base-preset",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "inherits": "base-preset",
            "name": "ninja-base-preset",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "linux-x64-base-preset",
            "inherits": "ninja-base-preset",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "/mnt/c/Libraries/vcpkg/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "VCPKG_TARGET_TRIPLET": "x64-linux"

            },
          "vendor": {
            "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Linux" ] },
            "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": { "sourceDir": "$env{HOME}/projects/VS/$ms{projectDirName}" },
            "remoteCopySourcesExclusionList": [ "packages" ],
            "rsyncCommandArgs": [ "--exclude=packages" ]
          }
        },
        {
            "name": "linux-arm64-base-preset",
            "inherits": "ninja-base-preset",
            "hidden": true,
          "cacheVariables": {
            "CMAKE_C_COMPILER": "/usr/bin/aarch64-linux-gnu-gcc",
            "CMAKE_CXX_COMPILER": "/usr/bin/aarch64-linux-gnu-g++",
            "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
            "CMAKE_TOOLCHAIN_FILE": {
              "value": "/mnt/c/Libraries/vcpkg/scripts/buildsystems/vcpkg.cmake",
              "type": "FILEPATH"
            },
            "VCPKG_TARGET_TRIPLET": "arm64-linux",
            "VCPKG_INSTALLED_DIR": "${sourceDir}/packages"
          },
          "vendor": {
            "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Linux" ] },
            "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": { "sourceDir": "$env{HOME}/projects/VS/$ms{projectDirName}" },
            "remoteCopySourcesExclusionList": [ "packages" ],
            "rsyncCommandArgs": [ "--exclude=packages" ]

          }
        },
        {
            "name": "windows-x64-base-preset",
            "hidden": true,
            "description": "Target Windows with the Visual Studio 2022 development environment",
            "inherits": "ninja-base-preset",
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "VCPKG_INSTALLED_DIR": "${sourceDir}/build/packages",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
            },
            "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Windows" ] } }
        },
        {
            "name": "linux-x64-debug",
            "displayName": "linux-x64-debug",
            "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
            "inherits": "linux-x64-base-preset",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-x64-release",
            "displayName": "linux-x64-release",
            "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
            "inherits": "linux-x64-base-preset",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-arm64-debug",
            "description": "compile for arm 64 bit linux",
            "inherits": "linux-arm64-base-preset",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-arm64-release",
            "description": "compile for arm 64 bit linux",
            "inherits": "linux-arm64-base-preset",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-x64-debug",
            "displayName": "Windows x64 Debug",
            "description": "Target Windows with the Visual Studio 2022 development environment",
            "inherits": "windows-x64-base-preset",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x64-release",
            "displayName": "Windows x64 Release",
            "description": "Target Windows with the Visual Studio 2022 development environment",
            "inherits": "windows-x64-base-preset",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}